#include <ESP8266WiFi.h>
#include <ESP8266HTTPClient.h>

String WIFI_SSID = "WIFI@ITERA"; 
String WIFI_PASS = "";         //kosongin aja
String NIM = "hilmi.13116150"; //USERNAME
String PASS = "1998-11-30";    //PASS

void setup() {
  Serial.begin(9600);
  WiFi.begin(WIFI_SSID, WIFI_PASS);
  while(WiFi.status() != WL_CONNECTED){
    delay(200);
    Serial.println("Connecting...");
  }
  HTTPClient http;
  http.begin("http://hotspot.itera.ac.id/login.html");
  http.addHeader("Content-Type", "application/x-www-form-urlencoded");
  String kirim = "buttonClicked=0&err_flag=0&err_msg=&info_flag=0&info_msg=&redirect_url=http%3A%2F%2Fwww.msftconnecttest.com%2Fredirect&network_name=Guest+Network&username=";
  kirim += NIM;
  kirim += "&password=";
  kirim += PASS;
  int httpCode = http.POST(kirim);
  if(httpCode > 0){
    Serial.println(http.getString());   
  }
}

void loop() {
  if (WiFi.status() == WL_CONNECTED){
    delay(200);
    Serial.println("Connected");
  }
}
